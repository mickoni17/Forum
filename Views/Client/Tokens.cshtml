@model dynamic
@{
    ViewBag.Title = "Tokens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose the token package you want to purchase</h2>
<form method="post" action="PostPackage">
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        <label class="form-check-label" for="exampleRadios1">
            Silver package - @Model.SA tokens for @Model.SP $
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
        <label class="form-check-label" for="exampleRadios2">
            Gold package - @Model.GA tokens for @Model.GP $
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
        <label class="form-check-label" for="exampleRadios3">
            Platinum package - @Model.PA tokens for @Model.PP $
        </label>
    </div>
    <button style="margin-top:10px;" type="submit" class="btn btn-primary">Purchase</button>
</form>
<br />
<hr />
<button style="padding:0;" class="btn btn-link" type="button">
    @Html.ActionLink("My previous orders", "TokenOrdersPage", "Client", new { area = "" }, new { @class = "nav-link" })
</button>